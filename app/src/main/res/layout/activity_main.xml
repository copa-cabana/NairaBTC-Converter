<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/cost"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="120dp"
        android:autofillHints="test"
        android:hint="@string/naira_amount"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_converter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/convert"
        app:layout_constraintEnd_toEndOf="@id/cost"
        app:layout_constraintStart_toStartOf="@id/cost"
        app:layout_constraintTop_toBottomOf="@id/cost" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_round_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="@id/btn_converter"
        app:layout_constraintStart_toStartOf="@id/btn_converter"
        app:layout_constraintTop_toBottomOf="@id/btn_converter" />

    <TextView
        android:id="@+id/whole_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="5dp"
        android:text="@string/to_whole_number"
        app:layout_constraintEnd_toEndOf="@id/switch_round_up"
        app:layout_constraintStart_toStartOf="@id/switch_round_up"
        app:layout_constraintTop_toBottomOf="@id/switch_round_up" />

    <TextView
        android:id="@+id/amnt_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="12dp"
        android:text="@string/btc_amnt_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/whole_number" />


    <TextView
        android:id="@+id/value_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="1dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/amnt_value"
        app:layout_constraintStart_toStartOf="@id/amnt_value"
        app:layout_constraintTop_toBottomOf="@id/amnt_value" />


</androidx.constraintlayout.widget.ConstraintLayout>